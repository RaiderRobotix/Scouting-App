<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.usfirst.frc.team25.scouting.ui.MenuActivity">


    <RelativeLayout
        android:id="@+id/menu1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp">

        <ImageButton
            android:id="@+id/menu1_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_icon_white"

            android:scaleType="centerInside"

            android:src="@drawable/circle_icon"

            />


        <TextView

            android:id="@+id/menu1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu1_button"
            android:layout_centerHorizontal="true"
            android:enabled="true"
            android:text="@string/menu_1"

            android:textAlignment="center"
            android:textColor="@color/bright_foreground_material_light"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="60dp">

        <ImageButton
            android:id="@+id/menu2_button"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:layout_alignParentTop="true"

            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/share_icon" />

        <TextView
            android:id="@+id/menu2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu2_button"
            android:layout_centerHorizontal="true"
            android:enabled="true"
            android:text="@string/menu_2"

            android:textAlignment="center"
            android:textColor="@color/bright_foreground_material_light"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menu1"
        android:layout_marginLeft="60dp"
        android:translationY="60dp">

        <ImageButton
            android:id="@+id/menu3_button"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:layout_alignParentTop="true"

            android:background="@null"

            android:scaleType="centerInside"
            android:src="@drawable/book_icon" />

        <TextView
            android:id="@+id/menu3_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu3_button"
            android:layout_centerHorizontal="true"
            android:enabled="true"
            android:text="@string/menu_3"

            android:textAlignment="center"
            android:textColor="@color/bright_foreground_material_light"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/menu2"
        android:layout_marginRight="60dp"
        android:translationY="60dp">


        <ImageButton
            android:id="@+id/menu4_button"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:layout_alignParentTop="true"

            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/settings_icon" />

        <TextView
            android:id="@+id/menu4_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu4_button"
            android:layout_centerHorizontal="true"
            android:enabled="true"
            android:text="@string/menu_4"

            android:textAlignment="center"
            android:textColor="@color/bright_foreground_material_light"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="normal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/current_info_label"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/default_status"
        android:textAppearance="?android:attr/textAppearanceLarge"


        android:textColor="@color/bright_foreground_material_light"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/current_info_label"
        android:layout_below="@id/menu4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/raiderRobotixLogo"
                android:layout_width="175dp"
                android:layout_height="match_parent"

                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"

                android:src="@drawable/team_25_logo" />

            <ImageView
                android:id="@+id/powerUpView"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/raiderRobotixLogo"
                android:src="@drawable/first_power_up_logo"


                />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
