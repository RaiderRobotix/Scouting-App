<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:id="@+id/main_menu"
    tools:context="org.usfirst.frc.team25.scouting.ui.MenuActivity">



    <RelativeLayout
        android:id="@+id/menu1"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/menu1_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_icon_white"

            android:src="@drawable/circle_icon"

            android:scaleType="centerInside"

            />



        <TextView

            android:id="@+id/menu1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu1_button"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="@string/menu_1"

            android:textStyle="normal"
            android:textSize="@dimen/abc_text_size_large_material"
            android:enabled="true"
            android:textColor="@color/bright_foreground_material_light" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginTop="20dp"
        android:id="@+id/menu2"
        android:layout_width="120dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/menu2_button"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/share_icon"
            android:scaleType="centerInside"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/menu2_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu2_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:text="@string/menu_2"

            android:textStyle="normal"
            android:textSize="@dimen/abc_text_size_large_material"
            android:enabled="true"
            android:textColor="@color/bright_foreground_material_light" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menu1"
        android:layout_height="wrap_content"
        android:id="@+id/menu3">

        <ImageButton
            android:id="@+id/menu3_button"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/book_icon"
            android:scaleType="centerInside"
            android:background="@null"
            />

        <TextView
            android:id="@+id/menu3_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu3_button"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="@string/menu_3"

            android:textStyle="normal"
            android:textSize="@dimen/abc_text_size_large_material"
            android:enabled="true"
            android:textColor="@color/bright_foreground_material_light" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/menu2"
        android:id="@+id/menu4"
        android:layout_width="120dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/menu4_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/settings_icon"
            android:scaleType="centerInside"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/menu4_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu4_button"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="@string/menu_4"

            android:textStyle="normal"
            android:textSize="@dimen/abc_text_size_large_material"
            android:enabled="true"
            android:textColor="@color/bright_foreground_material_light" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/default_status"
        android:textAlignment="center"
        android:id="@+id/current_info_label"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/bright_foreground_material_light" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/menu4">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/raider_logo_view"
        android:src="@drawable/team_25_logo"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"

        android:layout_marginLeft="45dp"
        android:layout_marginBottom="75dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/strongholdView"
        android:src="@drawable/stronghold_logo"

        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp" />
</RelativeLayout>
</RelativeLayout>
