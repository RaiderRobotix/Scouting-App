<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auto_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fillViewport="true"
    tools:context=".ui.dataentry.AutoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp">
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/Scout_Name_Pit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            android:inputType="textPersonName"
            android:outlineProvider="bounds"
            android:paddingBottom="@dimen/default_padding_bottom"
            android:text="Pit Scout Name 1"
            android:textColor="@color/first_gray" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/Scout_Name_Pit_2_Optional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            android:inputType="textPersonName"
            android:outlineProvider="bounds"
            android:paddingBottom="@dimen/default_padding_bottom"
            android:text="Pit Scout Name 2 (optional)"
            android:textColor="@color/first_gray" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/Scout_Name_Pit_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:inputType="textPersonName"
                android:outlineProvider="bounds"
                android:paddingBottom="@dimen/default_padding_bottom"
                android:text="Pit Scout Name 3 (optional)"
                android:textColor="@color/first_gray" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/Team_Num_Pit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:inputType="number"
                android:outlineProvider="bounds"
                android:paddingLeft="@dimen/inner_padding_left"
                android:layout_centerHorizontal="true"
                android:text="Pit Team Number"
                android:textColor="@color/first_gray" />

    </RelativeLayout>

</ScrollView>
