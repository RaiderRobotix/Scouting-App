<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fillViewport="true"
    tools:context=".ui.dataentry.AutoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/robot_exit_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5sp"
            android:padding="3sp"
            android:text="Robot exits the community"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/auton_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/robot_exit_community"
            android:layout_marginTop="-10dp"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cargo"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Top Row"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cones"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                        android:id="@+id/cone_scored_top_row_auton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:maxValueSet="3"
                        app:initialValueSet="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cubes"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                        android:id="@+id/cube_scored_top_row_auton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:maxValueSet="3"
                        app:initialValueSet="0" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Middle Row"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cone_scored_mid_row_auton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:maxValueSet="3"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cube_scored_mid_row_auton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:maxValueSet="3"
                    android:layout_weight="1.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Hybrid Row"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cone_scored_btt_row_auton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:maxValueSet="3"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cube_scored_btt_row_auton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:maxValueSet="3"
                    android:layout_weight="1.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Pieces Dropped"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cone_dropped_auton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:maxValueSet="3"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cube_dropped_auton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:maxValueSet="3"
                    android:layout_weight="1.5" />

            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/robot_attempt_dock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auton_main"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:padding="3dp"
            android:text="Robot Attempts to Dock"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/robot_dock_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/robot_attempt_dock"
            android:layout_marginLeft="24dp"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/docked_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="30dp"
                android:text="Robot is docked"
                android:enabled="false"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/docked_engaged_button"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="Robot is docked and engaged"
                android:textSize="18sp" />


        </RadioGroup>




        <Button
            android:id="@+id/auto_continue"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/robot_dock_group"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:elevation="6dp"
            android:text="@string/continue_button"
            android:textColor="#ffffff" />


    </RelativeLayout>

</ScrollView>
