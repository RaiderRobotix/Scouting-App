<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auton_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fillViewport="true"
    tools:context=".ui.dataentry.AutoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/auto_continue"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/auton_layout_4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:elevation="6dp"
            android:text="@string/continue_button"
            android:textColor="#ffffff"
            tools:ignore="ExtraText" />


        <CheckBox
            android:id="@+id/cross_com_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crosses Community Line"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/level_one_layout_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/auton_layout_1"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cross_com_line"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/note_pick_auto_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes Picked Up"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/notes_picked_auton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/auton_layout_2"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/auton_layout_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amp_scored_auto_text"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amp Notes Scored"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/amp_scored_auton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/auton_layout_3"
            android:layout_width="387dp"
            android:layout_height="72dp"
            android:layout_below="@+id/auton_layout_2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/speaker_notes_auton_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Speaker Notes Scored"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/speaker_scored_auton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/auton_layout_4"
            android:layout_width="386dp"
            android:layout_height="85dp"
            android:layout_below="@+id/auton_layout_3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/notes_drop_auto_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes Dropped"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/notes_dropped_auton"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>
