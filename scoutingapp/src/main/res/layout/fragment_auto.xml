<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fillViewport="true"
    tools:context=".ui.dataentry.AutoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <CheckBox
            android:id="@+id/reach_HAB_line"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"

            android:layout_marginTop="5sp"
            android:padding="@dimen/default_padding_bottom"
            android:text="Reached HAB line"
            android:textSize="18sp" />


        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/cargo_delivered"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reach_HAB_line"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:titlePrompt="Cargo delivered" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/hatch_panels_delivered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cargo_delivered"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:titlePrompt="Hatch panels delivered" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/cargo_dropped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hatch_panels_delivered"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:titlePrompt="Cargo dropped" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/hatches_dropped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cargo_dropped"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:titlePrompt="Hatch panels dropped" />


        <CheckBox
            android:id="@+id/cubes_wrong_plate_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hatches_dropped"
            android:layout_marginStart="@dimen/activity_horizontal_margin"

            android:layout_marginTop="5sp"
            android:padding="@dimen/default_padding_bottom"
            android:text="Cube(s) dropped on opponent plate(s)"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/switch_wrong_plate_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cubes_wrong_plate_auto"
            android:layout_marginLeft="50dp"

            android:enabled="false"
            android:padding="@dimen/default_padding_bottom"
            android:text="Opponent plate of own switch"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/scale_wrong_plate_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch_wrong_plate_auto"
            android:layout_marginLeft="50dp"

            android:enabled="false"
            android:padding="@dimen/default_padding_bottom"
            android:text="Opponent scale plate"
            android:textSize="18sp" />


        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/power_cube_pile_pickup_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scale_wrong_plate_auto"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:maxValue="10"
            app:titlePrompt="Cubes picked up from power cube pile" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/six_switch_pickup_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/power_cube_pile_pickup_auto"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:maxValue="6"
            app:titlePrompt="Cubes picked up from next to switch" />


        <CheckBox
            android:id="@+id/opponent_cargo_ship_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/six_switch_pickup_auto"
            android:layout_marginStart="@dimen/activity_horizontal_margin"

            android:layout_marginTop="5sp"
            android:padding="@dimen/default_padding_bottom"
            android:text="Opponent cargo ship line cross"
            android:textSize="18sp" />

        <!--More metrics: cubes picked up from power cube pile, six next to switch -->

        <Button
            android:id="@+id/auto_continue"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/opponent_cargo_ship_line"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:elevation="6dp"
            android:text="@string/continue_button"
            android:textColor="#ffffff" />


    </RelativeLayout>

</ScrollView>
