<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ui.dataentry.TeleOpFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tele_continue"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/scoringMap"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:elevation="6dp"
            android:text="@string/continue_button"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/robot_attempt_dock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/robotFoulGroup"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:padding="3dp"
            android:text="Robot Attempts to Dock"
            android:textSize="18sp" />


        <CheckBox
            android:id="@+id/robot_commit_foul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tele_main"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:padding="@dimen/default_padding_bottom"
            android:text="Robot Commits Foul"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/scoringMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/robot_dock_group"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/comm_newlayo"
            android:scaleX="1"
            android:scaleY="1" />

        <LinearLayout
            android:id="@+id/tele_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cargo"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Top Row"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cones"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                        android:id="@+id/cones_scored_top_row_tele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:initialValueSet="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cubes"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                        android:id="@+id/cubes_scored_top_row_tele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:initialValueSet="0" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Middle Row"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cones_scored_mid_row_tele"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cubes_scored_mid_row_tele"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Hybrid Row"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cones_scored_bttm_row_tele"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cubes_scored_bttm_row_tele"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Pieces Dropped"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cones_dropped_tele"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:id="@+id/cubes_dropped_tele"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

            </LinearLayout>

        </LinearLayout>


        <RadioGroup
            android:id="@+id/robotFoulGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/robot_commit_foul"
            android:layout_marginStart="45dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/robot_foul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="Foul"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/robot_techFoul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="Tech Foul"
                android:textSize="18sp" />


        </RadioGroup>


        <RadioGroup
            android:id="@+id/robot_dock_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/robot_attempt_dock"
            android:layout_marginLeft="24dp"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/docked_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:enabled="false"
                android:padding="8dp"
                android:text="Robot is docked"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/docked_engaged_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:enabled="false"
                android:padding="8dp"
                android:text="Robot is docked and engaged"
                android:textSize="18sp" />


        </RadioGroup>

