<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auto_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fillViewport="true"
    tools:context=".ui.dataentry.AutoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="433dp"
            android:layout_below="@id/auto_continue"
            android:layout_marginTop="-33dp"
            android:src="@drawable/map" />

        <LinearLayout
            android:id="@+id/teleop_layout_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_text"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/teleop_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/cross_com_line"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cross Line"
                    android:textSize="24sp"
                    tools:ignore="TouchTargetSizeCheck" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/auton_layout_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/auto_zone_one_text"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Level 1"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/auto_zone_text_coral"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coral"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/auto_layout_3"
                android:layout_width="569dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/auto_zone_two_text"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Level 2"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/auto_zone_text_processor"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Processor"
                    android:textSize="24sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/auto_layout_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/auto_zone_three_text"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Level 3"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/auto_zone_text_made"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Net"
                    android:textSize="24sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sigmatemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/auto_zone_four_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Level 4"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/auto_zone_text_missed"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shots Missed"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/major_foul_auto_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Major Foul"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/minor_foul_auto_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minor Foul"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/auto_continue"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/teleop_layout_main"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:FillColor="#fffff"
            android:background="#2196F3"
            android:elevation="6dp"
            android:text="@string/continue_button"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            tools:ignore="ExtraText" />

        <TextView
            android:id="@+id/auto_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="TeleOp"
            android:textSize="40dp"></TextView>


    </RelativeLayout>

</ScrollView>