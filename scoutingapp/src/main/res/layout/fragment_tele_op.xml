<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ui.dataentry.TeleOpFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/teleop_layout_3"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"            android:layout_below="@+id/teleop_layout_2"
            >
            <TextView
                android:id="@+id/speaker_notes_teleop_text"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Speaker Notes Scored"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/speaker_scored_teleop"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/teleop_layout_4"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/teleop_layout_6"
>
            <TextView
                android:id="@+id/notes_drop_teleop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes Dropped"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/notes_dropped_teleop"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Tele-operated"
            android:textSize="40dp"
            ></TextView>
        <Button
            android:id="@+id/teleop_continue"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/teleop_layout_4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:elevation="6dp"
            android:text="@string/continue_button"
            android:textColor="#ffffff"
            tools:ignore="ExtraText" />

        <LinearLayout
            android:id="@+id/teleop_layout_2"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/teleop_layout_5"
            >
            <TextView
                android:id="@+id/amp_scored_teleop_text"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amp Notes Scored"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/amp_scored_teleop"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/teleop_layout_6"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/teleop_layout_3"
>
            <TextView
                android:id="@+id/speaker_amplified_text"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amped Speaker Notes"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/speaker_amplified_teleop"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/teleop_layout_1"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            >

            <TextView
                android:id="@+id/note_pick_teleop_text"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes Picked From HPS"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/notes_picked_teleop"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/teleop_layout_5"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/teleop_layout_1"
            >
            <TextView
                android:id="@+id/notes_picked_ground_text"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes Picked From Ground"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                android:id="@+id/notes_picked_ground"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>
