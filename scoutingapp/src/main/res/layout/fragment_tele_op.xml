<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ui.dataentry.TeleOpFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/level_one_layout_teleop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cargo_text_view_teleop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/hatch_text_view_teleop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hatches"
                    android:textSize="25dp" />

            </LinearLayout>


            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/cargo_ship_hatches_teleop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_one_layout_teleop"
                android:padding="@dimen/default_padding_bottom"
                app:initialValue="0"
                app:titlePrompt="Cargo ship - hatches" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/rocket_level_one_hatches_teleop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cargo_ship_hatches_teleop"
                android:padding="@dimen/default_padding_bottom"
                app:initialValue="0"
                app:titlePrompt="Rocket - hatches" />


            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/cargo_ship_cargo_teleop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rocket_level_one_hatches_teleop"
                android:padding="@dimen/default_padding_bottom"
                app:initialValue="0"
                app:titlePrompt="Cargo ship - cargo" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/rocket_level_one_cargo_teleop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cargo_ship_cargo_teleop"
                android:padding="@dimen/default_padding_bottom"
                app:initialValue="0"
                app:titlePrompt="Rocket - cargo" />


            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/hatches_dropped_teleop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rocket_level_one_cargo_teleop"
                android:padding="@dimen/default_padding_bottom"
                app:initialValue="0"
                app:titlePrompt="Accidentally dropped hatches" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/cargo_dropped_teleop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hatches_dropped_teleop"
                android:padding="@dimen/default_padding_bottom"
                app:initialValue="0"
                app:titlePrompt="Accidentally dropped cargo" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/fouls_committed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hatches_dropped_teleop"
                android:padding="@dimen/default_padding_bottom"
                android:visibility="gone"
                app:initialValue="0"
                app:titlePrompt="Fouls committed in teleop" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/tech_fouls_committed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fouls_committed"
                android:padding="@dimen/default_padding_bottom"
                android:visibility="gone"
                app:initialValue="0"
                app:titlePrompt="Tech fouls committed" />

            <CheckBox
                android:id="@+id/attempt_hab_climb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cargo_dropped_teleop"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:padding="@dimen/default_padding_bottom"
                android:text="Attempts to climb"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/success_hab_climb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attempt_hab_climb_level"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:enabled="false"
                android:padding="@dimen/default_padding_bottom"
                android:text="Successful in hab climb"
                android:textSize="18sp" />

            <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
                android:id="@+id/climbs_assisted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/success_hab_climb_level"
                android:padding="@dimen/default_padding_bottom"
                app:initialValue="0"
                app:maxValue="2"
                app:titlePrompt="Climbs assisted" />

            <RadioGroup
                android:id="@+id/attempt_hab_climb_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attempt_hab_climb"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/attempt_hab_level_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:padding="8dp"
                    android:text="Level 1"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/attempt_hab_level_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:padding="8dp"
                    android:text="Level 2"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/attempt_hab_level_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:padding="8dp"
                    android:text="Level 3"
                    android:textSize="18dp" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/success_hab_climb_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/success_hab_climb"
                android:layout_marginLeft="45dp"
                android:orientation="vertical"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/success_hab_level_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:padding="8dp"
                    android:text="HAB Level 1"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/success_hab_level_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:padding="8dp"
                    android:text="HAB Level 2"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/success_hab_level_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:padding="8dp"
                    android:text="HAB Level 3"
                    android:textSize="18sp" />

            </RadioGroup>

            <Button
                android:id="@+id/tele_continue"
                android:layout_width="150dp"
                android:layout_height="60dp"

                android:layout_below="@id/climbs_assisted"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:elevation="6dp"
                android:text="@string/continue_button"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
