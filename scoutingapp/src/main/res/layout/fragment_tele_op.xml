<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ui.dataentry.TeleOpFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/level_one_layout_teleop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cargo"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Rocket level 1"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cargo"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rocket_level_one_cargo_teleop"
                        app:initialValueSet="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Hatches"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                        android:id="@+id/rocket_level_one_hatches_teleop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:initialValueSet="0" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Rocket level 1"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Rocket level 1"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Rocket level 1"
                    android:textSize="18sp" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecSet
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />
            </LinearLayout>
        </LinearLayout>


        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/cargo_ship_hatches_teleop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_one_layout_teleop"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:titlePrompt="Cargo ship - hatches" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/cargo_ship_cargo_teleop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cargo_ship_hatches_teleop"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:titlePrompt="Cargo ship - cargo" />


        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/hatches_dropped_teleop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cargo_ship_cargo_teleop"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:titlePrompt="Accidentally dropped hatches" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/cargo_dropped_teleop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hatches_dropped_teleop"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:titlePrompt="Accidentally dropped cargo" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/fouls_committed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hatches_dropped_teleop"
            android:padding="@dimen/default_padding_bottom"
            android:visibility="gone"
            app:initialValue="0"
            app:titlePrompt="Fouls committed in teleop" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/tech_fouls_committed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fouls_committed"
            android:padding="@dimen/default_padding_bottom"
            android:visibility="gone"
            app:initialValue="0"
            app:titlePrompt="Tech fouls committed" />

        <CheckBox
            android:id="@+id/attempt_hab_climb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cargo_dropped_teleop"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:padding="@dimen/default_padding_bottom"
            android:text="Attempts to climb"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/success_hab_climb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attempt_hab_climb_level"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:enabled="false"
            android:padding="@dimen/default_padding_bottom"
            android:text="Successful in hab climb"
            android:textSize="18sp" />

        <org.usfirst.frc.team25.scouting.ui.views.ButtonIncDecView
            android:id="@+id/climbs_assisted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/success_hab_climb_level"
            android:padding="@dimen/default_padding_bottom"
            app:initialValue="0"
            app:maxValue="2"
            app:titlePrompt="Climbs assisted" />

        <RadioGroup
            android:id="@+id/attempt_hab_climb_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attempt_hab_climb"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/attempt_hab_level_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="Level 1"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/attempt_hab_level_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="Level 2"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/attempt_hab_level_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="Level 3"
                android:textSize="18dp" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/success_hab_climb_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/success_hab_climb"
            android:layout_marginLeft="45dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/success_hab_level_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="HAB Level 1"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/success_hab_level_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="HAB Level 2"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/success_hab_level_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="8dp"
                android:text="HAB Level 3"
                android:textSize="18sp" />

        </RadioGroup>

        <Button
            android:id="@+id/tele_continue"
            android:layout_width="150dp"
            android:layout_height="60dp"

            android:layout_below="@id/climbs_assisted"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:elevation="6dp"
            android:text="@string/continue_button"
            android:textColor="#ffffff" />

    </RelativeLayout>


</ScrollView>
