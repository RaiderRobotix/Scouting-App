                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_below="@+id/teleop_text"
                android:background="@drawable/border"/>

        </LinearLayout>

        <LinearLayout
