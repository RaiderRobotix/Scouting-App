<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:textColor">#000000</item>
        <item name="alertDialogStyle">@style/AppCompatAlertDialogStyle

        </item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="background">@color/blue_500</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="AppTheme.ActionBarStyleRed" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="background">@color/red_500</item>
        <item name="elevation">4dp</item>
    </style>


    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="Widget.AppCompat.Button.Colored.blue" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue_500</item>
        <item name="colorAccent">@color/blue_500</item>
    </style>

    <style name="Widget.AppCompat.Button.Colored.gray" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#9E9E9E</item>
        <item name="colorAccent">#9E9E9E</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.NoLauncher">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoLauncher.Blue">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:colorButtonNormal">@color/blue_500</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.NoLauncher.Green">
        <item name="colorPrimary">#0d7e7c</item>
        <item name="colorAccent">#c9c9c9</item>
        <item name="android:colorButtonNormal">#0d7e7c</item>
    </style>

    <style name="AppTheme.NoLauncher.Red">
        <item name="colorPrimary">#e91807</item>
        <item name="colorAccent">#e91807</item>
        <item name="android:colorButtonNormal">#e91807</item>
    </style>

    <style name="AppTheme.NoLauncher.Raider">
        <item name="colorPrimary">@color/raider_blue</item>
        <item name="colorAccent">@color/raider_accent_yellow</item>
        <item name="android:colorButtonNormal">@color/raider_blue</item>

        <item name="actionBarStyle">@style/AppTheme.ActionBarStyleRed</item>
    </style>

    <style name="AppTheme.NoLauncher.Black">
        <item name="colorPrimary">#000000</item>
        <item name="colorAccent">#DDDDDD</item>
        <item name="android:colorButtonNormal">#000000</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
